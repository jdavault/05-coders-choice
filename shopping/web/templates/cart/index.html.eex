<h2>Listing carts</h2>

<table class="table">
  <thead>
    <tr>
      <th>Product</th>
      <th>Name</th>
      <th>Description</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for cart <- @carts do %>
    <tr>
      <td><%= cart.product_id %></td>
      <td><%= cart.name %></td>
      <td><%= cart.description %></td>

      <td class="text-right">
        <span><%= link "Show", to: cart_path(@conn, :show, cart), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: cart_path(@conn, :edit, cart), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: cart_path(@conn, :delete, cart), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New cart", to: cart_path(@conn, :new) %></span>
